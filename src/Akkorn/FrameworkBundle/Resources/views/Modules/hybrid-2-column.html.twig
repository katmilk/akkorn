{% if module.layout is not defined  %}
<div class="mod-inner">
	{% set i = 1 %}
	{% for column in module.columns %}
	{% if i == module.columns|length %}
		<div class="inner-content col-2 last">
	{% endif %}
	{% if i != module.columns|length %}
		<div class="inner-content col-2">
	{% endif %}
		{% if column.img is defined %}
			<div class="img-container">
				<img src="{{column.img}}">
			</div>
		{% endif %}
		<div class="copy-container">
			{% if column.title is defined %}
				<h2>{{column.title|raw}}</h2>
			{% endif %}
			{% if column.subtitle is defined %}
				<h3>{{column.subtitle|raw}}</h3>
			{% endif %}
			{% if column.text is defined %}
				{{column.text|raw}}
			{% endif %}
		</div>
	</div>
	{% set i = i + 1 %}
	{% endfor %}
</div>
{% endif %}

