<div id="{{ module_id }}" class="module {{ module_class }}">
	<div class="mod-inner">
		<div class="btn-container">
			<div class="btns">
				<ul>
					{% set j = 1 %}
					{% for btn in module.btns %}
						{% if j == 1 %}
							<li data-tab="{{j}}" class="first active">{{btn.label}}</li>
						{% endif %}
						{% if j == module.btns|length %}
							<li data-tab="{{j}}" class="last">{{btn.label}}</li>
						{% endif %}
						{% if j != module.btns|length and j != 1 %}
							<li data-tab="{{j}}">{{btn.label}}</li>
						{% endif %}
						{% set j = j + 1 %}
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="tab-content">
			{% set i = 1 %}
			{% for tab in module.tabs %}
				{% if i == 1 %}
					<div class="tab active" data-index="{{i}}">
				{% endif %}
				{% if i != 1 %}
					<div class="tab" data-index="{{i}}">
				{% endif %}
					<div class="mod-inner">
						{% if tab.img is defined %}
							<div class="img-container">
								<img src="{{tab.img}}">
							</div>
						{% endif %}
						{% if tab.text is defined %}
							<div class="copy-container">
								{{tab.text|raw}}
							</div>
						{% endif %}
					</div>
				</div>
			{% set i = i + 1 %}
			{% endfor %}
		</div>
	</div>
</div>