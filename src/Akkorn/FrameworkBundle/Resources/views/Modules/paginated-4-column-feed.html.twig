<div id="{{ module_id }}" class="module {{ module_class }}">
	<div class="mod-inner">
		<div class="controls-container clearfix">
		<div class="controls">
			<ul>
				<li class="prev">prev</li>
				<li class="next">next</li>
			</ul>
		</div>
	</div>
		<div class="tab-content">
			{% set i = 1 %}
			{% for tab in module.tabs %}
				{% if i == 1 %}
					<div class="tab active clearfix" data-index="{{i}}">
				{% endif %}
				{% if i != 1 %}
					<div class="tab clearfix" data-index="{{i}}">
				{% endif %}
				{% for column in tab.columns %}
					<div class="inner-content col-4">
						{% if column.img is defined %}
							<div class="img-container">
								<img src="{{column.img}}">
							</div>
						{% endif %}
						<div class="copy-container">
							{% if column.title is defined %}
								<h2>{{column.title}}</h2>
							{% endif %}
							{% if column.subtitle is defined %}
								<h3>{{column.subtitle}}</h3>
							{% endif %}
							{% if column.text is defined %}
								{{column.text|raw}}
							{% endif %}
						</div>
					</div>
				{% endfor %}
				</div>
			{% set i = i + 1 %}
			{% endfor %}
		</div>
	</div>
</div>