<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Framework Bundle{% endblock %}</title>
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/akkornframework/css/global.css') }}" />
</head>
<body>
    <div id="global-wrapper">
        
        <div id="global-hat">
            {% include 'AkkornFrameworkBundle:Partials:global-hat.html.twig' %}
        </div>

        <div id="global-header">
            {% include 'AkkornFrameworkBundle:Partials:global-header.html.twig' %}
        </div>

        <div id="global-container">
            {% block content %}{% endblock %}
        </div>

        <div id="global-footer">
            {% include 'AkkornFrameworkBundle:Partials:global-footer.html.twig' %}
        </div>

    </div>
    {% if code is defined %}
        <h2>Code behind this page</h2>
        <div class="symfony-content">{{ code|raw }}</div>
    {% endif %}

